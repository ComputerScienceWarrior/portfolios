<div class="portfolio-project-wrapper d-flex justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm mb-4">
            <div class="card-header">
                <h3 class="card-title"><%= @project.title %></h3>
                <div class="text-muted"><i><%= @project.caption %></i></div>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <%= image_tag @project.thumbnail_url, class: 'img-fluid rounded', alt: @project.title %>
                </div>
                <h5>Description</h5>
                <p><%= @project.description %></p>
            </div>
            <div class="card-footer text-muted">
                <small>Part of Portfolio ID: <%= @project.portfolio_id %></small>
            </div>
        </div>

        <div class="text-center">
            <%= link_to "Edit Project", edit_portfolio_project_path(@project), class: 'btn btn-warning' %>
            <%= link_to "Back to Portfolio", user_portfolio_path(@project.portfolio.user, @project.portfolio_id), class: 'btn btn-secondary ml-2' %>
            <%= button_to 'Remove Project', portfolio_project_path(@project.portfolio_id, @project), class: 'btn btn-danger', method: :delete %>
        </div>
    </div>
</div>
