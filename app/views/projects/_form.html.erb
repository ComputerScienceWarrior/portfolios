<div class="portfolio-projects-wrapper d-flex justify-content-center">
    <div class="col-md-6">
        <h2 class="text-center mb-4"><%= f.object.new_record? ? "Create a new Project" : "Edit Project" %></h2>
        <%= f.label :title, class: 'form-label' %>
        <%= f.text_field :title, class: 'form-control', placeholder: 'Project Title' %>

        <div class="form-group">
            <%= f.label :caption, class: 'form-label' %>
            <%= f.text_field :caption, class: 'form-control', placeholder: 'Project Caption' %>
        </div>

        <div class="form-group">
            <%= f.label :description, class: 'form-label' %>
            <%= f.text_area :description, class: 'form-control', placeholder: 'Project Description', rows: 4 %>
        </div>

        <div class="form-group">
            <%= f.label :thumbnail_url, class: 'form-label' %>
            <%= f.text_field :thumbnail_url, class: 'form-control', placeholder: 'Thumbnail URL' %>
        </div>

        <%= f.hidden_field :portfolio_id, value: @project.portfolio_id %>

        <div class="text-center">
            <%= f.submit f.object.new_record? ? "Create Project" : "Update Project", class: 'btn btn-primary' %>
        </div>
    </div>
</div>
