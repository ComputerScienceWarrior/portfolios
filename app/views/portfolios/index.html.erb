<div class="portfolios-wrapper">
    <h2>Portfolios</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Portfolio Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @portfolios.each.with_index(1) do |portfolio, i| %>
                <tr>
                    <td><%= i %></td>
                    <td><%= link_to portfolio.name, user_portfolio_path(portfolio.user, portfolio) %></td>
                    <td class="">
                        <%= link_to 'Edit', edit_user_portfolio_path(portfolio.user, portfolio), class: 'btn btn-warning btn-sm' %>
                        <%= button_to 'Delete', portfolio_path(portfolio), method: :delete, data: { confirm: 'Are you sure you want to delete this portfolio?' }, class: 'btn btn-danger btn-sm' %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
