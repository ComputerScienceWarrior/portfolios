<div class="container mt-4">
  <div class="portfolio-form-wrapper">
    <h2 class="mb-4"><%= f.object.new_record? ? 'Create Portfolio' : 'Edit Portfolio' %></h2>

    <div class="form-group">
      <%= f.label :name, 'Portfolio Name', class: 'form-label' %>
      <%= f.text_field :name, class: 'form-control', placeholder: 'Enter portfolio name' %>
    </div>

    <div class="form-group">
      <%= f.label :template, 'Choose a Template', class: 'form-label' %>
      <%= f.select :template, options_for_select([['Template 1', 'template_1'], ['Template 2', 'template_2'], ['Template 3', 'template_3']], f.object.template), { class: 'form-control' } %>
    </div>

    <%= f.hidden_field :user_id, value: @user.id %>

    <div class="form-group">
      <%= f.submit f.object.new_record? ? 'Create Portfolio' : 'Update Portfolio', class: 'btn btn-primary' %>
    </div>
  </div>
</div>
