<div class="container">
  <%= form_for @user, class: 'form' do |f| %>
    <div>
        <h1 class="header">Sign Up</h1>
    </div>

    <div class="form-group row mb-3">
      <%= f.label :first_name, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= f.text_field :first_name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row mb-3">
      <%= f.label :last_name, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row mb-3">
      <%= f.label :email, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= f.text_field :email, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row mb-3">
      <%= f.label :phone_number, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= f.text_field :phone_number, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row mb-3">
      <%= f.label :username, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= f.text_field :username, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row mb-3">
      <%= f.label :password_digest, "Create a Password", class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= f.password_field :password_digest, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row mb-3">
      <%= f.label :password_confirmation, "Confirm Password", class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row mb-3">
      <%= f.label :address_line_1, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= f.text_field :address_line_1, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row mb-3">
      <%= f.label :address_line_2, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= f.text_field :address_line_2, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row mb-3">
      <%= f.label :zipcode, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= f.text_field :zipcode, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row mb-3">
      <%= f.label :state, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= f.text_field :state, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row mb-3">
      <%= f.label :country, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= f.text_field :country, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row mb-3">
      <%= f.label :avatar_url, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= f.text_field :avatar_url, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.submit "Sign Up", class: 'btn btn-outline-success' %>
    </div>

  <% end %>
</div>
